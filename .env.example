# GitHub Actions exposes action inputs as INPUT_<NAME> env vars.
# Copy this to .env and set values for local testing.

# Comma-separated Jira project prefixes (e.g. "PROJ,TEAM"). Empty = match all.
INPUT_PROJECTS=

# Sources to check: branch, title, commits, body
INPUT_FROM=branch,title,commits

# Fail the action if no keys found
INPUT_FAIL_ON_MISSING=false

# Comma-separated prefixes to ignore (e.g. "SHA,UTF"). Empty = use default blocklist.
# Default: SHA,UTF,ISO,TCP,UDP,HTTP,HTTPS,SSL,TLS,SSH,DNS,FTP,SMTP,IMAP,POP,API,URL,URI,XML,JSON,YAML,HTML,CSS,RFC,IEEE,ANSI,ASCII
# Set to "none" to disable the blocklist entirely.
INPUT_BLOCKLIST=

# Custom regex for matching issue keys. Empty = use default pattern.
# Default: (?<![A-Z0-9])([A-Z][A-Z0-9]{1,9}-[0-9]{1,6})(?![A-Z0-9])
INPUT_ISSUE_PATTERN=

# Post PR description as a comment on linked Jira tickets
INPUT_POST_TO_JIRA=false

# Jira credentials (set as GitHub repository secrets)
INPUT_JIRA_BASE_URL=
INPUT_JIRA_EMAIL=
INPUT_JIRA_API_TOKEN=

# Fail the action if posting to Jira fails (default: warn only)
INPUT_JIRA_FAIL_ON_ERROR=false

# GitHub token for updating PR body with Jira links
INPUT_GITHUB_TOKEN=

# GitHub event context (for local testing)
# See: https://docs.github.com/en/actions/writing-workflows/choosing-what-your-workflow-does/store-information-in-variables#default-environment-variables
GITHUB_EVENT_NAME=push
GITHUB_REF=refs/heads/feature/PROJ-123-add-login
GITHUB_EVENT_PATH=
